<%= form_for(@truck) do |f| %>
<%= render 'shared/errors', object: @truck %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true %>
	</p>
	<p>
		<%= f.label :cuisine_type %>
		<%= f.text_field :cuisine_type %>
	</p>
	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>
<!-- 	<p>
		<%#= f.label :longitude %>
		<%#= f.number_field :longitude %>
	</p>
	<p>
		<%#= f.label :latitude %>
		<%#= f.number_field :latitude %>
	</p> -->
	<p>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= image_for(@truck) %>
	</p>
	<p>
		<!-- (1. the array in truck model holding cuisine type ids, 2. Model call to cuisine types, 3. Value of the checkbox from Cuisine_type 4. Label of checkbox is CuisineType name ) -->
		<%= f.collection_check_boxes(:cuisine_type_ids,CuisineType.all,:id,:name) %>
	</p>
	<p>
		<%= f.submit %>
		<%= link_to "Cancel", trucks_path %>
	</p>
<% end %>