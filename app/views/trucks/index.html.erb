
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>

	<%= link_to "New Truck", new_truck_path %>

	<div id="map-canvas"></div>
	<div class="container-fluid" id="main">
	  <div class="row">
	  	<div class="col-xs-12" id="left">
		<h1><%= pluralize(@trucks.size, 'Truck') %> <% pluralize(@trucks.size, 'is') %> in Hamilton.</h1>

	      <h2>Where is my food truck?</h2>

			<div style='width: 800px;'>
			  <div id="map" style='width: 800px; height: 400px;'></div>
			</div>
			<% @trucks.each do |truck| %>
	      <!-- item list -->
				<article class="trucks">
					<header>
						<%= link_to image_for(truck), truck %>
						<div class="">
	       				 <div class=""><h3><%= link_to truck.name, truck %></h3></div>
	      				</div>
					</header>

					<h3>Cuisine Type:</h3>
					<p>
						They make <%= truck.cuisine_type %>.
					</p>
					<h3>Location:</h3>
					<p><%= truck.address %>
					<p>Location last updated <%= time_ago_in_words(truck.updated_at) %> ago.</p>
					<hr>
				</article>
			<% end %>

	      <!-- /item list -->

	    </div>

	  </div>
	</div>
	<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers(<%=raw @hash.to_json %>)
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
	</script>
	<!-- end template -->

