<article>
  <header>
    <%= image_for(@truck) %>
    <h1><%= @truck.name %></h1>
  </header>
  <h2>Cuisine Type:</h2>

  <p>
    <%= @truck.cuisine_type %>
  </p>
  <h3>Current Address</h3>
  <p>
      <%= @truck.address %>
  </p>

  <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@truck.latitude}%2C#{@truck.longitude}" %>

  <h3>Longitude and Latitude</h3>
  <p>
      Longitude, Latitude: <%= @truck.longitude %>,
      <%= @truck.latitude %>
  </p>
  <h3>Updated:</h3>
  <p>
    <%= time_ago_in_words(@truck.updated_at) %> ago.
  </p>

  <h3><strong>Nearby Eateries</strong></h3>
    <ul>
      <% for truck in @truck.nearbys(10) %>
        <li><%= link_to truck.address, truck %> (<%= truck.distance.round(2) %> kms)</li>
      <% end %>
    </ul>

  <h3><%= link_to pluralize(@truck.reviews.count, "Review"), truck_reviews_path(@truck) %></h3>
  <h4>Add yours below:</h4>

  <%= render 'reviews/form' %>
  <hr>
  <ol id="reviews">
    <% @reviews.each do |review| %>
      <li>
        <span class="review"><%= pluralize(review.stars, 'star') %></span>
        <span class="user">by <%= review.name %></span>
        <span class="date"><%= time_ago_in_words(review.created_at) %> ago</span>
        <p>
          &quot;<%= review.comment %>&quot;
        </p>
      </li>
    <% end %>
  </ol>
  <% if @truck.reviews.any? %>
    <p>
      Read all <%= link_to pluralize(@truck.reviews.size, "review"),
                      truck_reviews_path(@truck) %>
    </p>
  <% end %>
</article>

<%= link_to "Write a Review", new_truck_review_path(@truck) %>
<%= link_to "All Trucks", trucks_path %> |
<%= link_to "Edit", edit_truck_path %> |
<%= link_to "Delete", truck_path(@truck), method: :delete, data: { confirm: 'Are you sure?' } %>



